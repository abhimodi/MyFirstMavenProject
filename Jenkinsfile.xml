pipeline {
    agent any

    tools {
        maven 'Maven3'     // Make sure this name matches Global Tool Configuration
        jdk 'JDK21'        // Same here
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/abhimodi/MyFirstMavenProject.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean install -DskipTests=true'
            }
        }

        stage('Run Tests') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Report') {
            steps {
                publishHTML(target: [
                    reportDir: 'target/cucumber-reports',
                    reportFiles: 'report.html',
                    reportName: 'Cucumber HTML Report'
                ])
            }
        }
    }

    post {
        always {
            junit 'target/surefire-reports/*.xml'
        }
    }
}
